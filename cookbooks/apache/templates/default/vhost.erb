# vhost template file

 <VirtualHost *:<%= @port %> >

	ServerName <%= @domain %>
	DocumentRoot <%= @document_root %>

    <Directory />
      Options FollowSymLinks
      AllowOverride None
    </Directory>
    <Directory <%= @document_root %> >
      Options Indexes FollowSymLinks MultiViews
      AllowOverride None
      Order allow,deny
      allow from all
    </Directory>
 </virtualHost>
